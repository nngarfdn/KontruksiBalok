<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/white"
        android:text="Aplikasi Hitung
KBS(Konstruksi Balok Sederhana)"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/bg"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/edtJarakAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:background="@drawable/bg_edittext"
                android:hint="a"
                android:paddingHorizontal="8dp"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="m"
                app:layout_constraintBottom_toBottomOf="@+id/edtJarakAB"
                app:layout_constraintStart_toEndOf="@+id/edtJarakAB"
                app:layout_constraintTop_toTopOf="@+id/edtJarakAB" />

            <EditText
                android:id="@+id/edtJarakBA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="8dp"
                android:hint="b"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="@+id/edtJarakAB"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/edtJarakAB" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="m"
                app:layout_constraintBottom_toBottomOf="@+id/edtJarakAB"
                app:layout_constraintStart_toEndOf="@+id/edtJarakBA"
                app:layout_constraintTop_toTopOf="@+id/edtJarakAB" />

            <EditText
                android:id="@+id/edtP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:background="@drawable/bg_edittext"
                android:hint="P"
                android:paddingHorizontal="8dp"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="@+id/edtJarakBA"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/edtJarakBA" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="kN"
                app:layout_constraintBottom_toBottomOf="@+id/edtJarakAB"
                app:layout_constraintStart_toEndOf="@+id/edtP"
                app:layout_constraintTop_toTopOf="@+id/edtJarakAB" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btnHitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="24dp"
            android:layout_height="80dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtRa1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Î£Mb = 0"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtRa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:text="Ra = 0kN"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtRa1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/txtRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rb = 0"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtDa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Da = 0"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Db = 0"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtDc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dc = 0"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtMa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma = 0"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtMB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mb = 0"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtMc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mc = 0"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

    </LinearLayout>




</LinearLayout>
</androidx.core.widget.NestedScrollView>